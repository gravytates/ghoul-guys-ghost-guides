{{#if updatePostForm}}
  <form>
    <div class="form-group">
      <div class='form-group'>
        <label for="title">Post title</label>
        {{input class='form-control' id="title" value=post.title}}
      </div>
      <div class='form-group'>
        <label for="author">Author</label>
        {{input class='form-control' id="author" value=post.author}}
      </div>
      <div class='form-group'>
        <label for="date">Date</label>
        {{input class='form-control' type='date' id="date" value=post.date}}
      </div>
      <div class='form-group'>
        <label for="body">Body</label>
        {{textarea class='form-control' rows=7 id="body" value=post.body}}
      </div>
      <div class='form-group'>
        <label for="img">Photo Evidence</label>
        {{input class='form-control' value=post.img id="img"}}
      </div>
      <button class='btn btn-primary' {{action "updatePost" post}}>Update</button>
    </div>
  </form>
{{else}}
 <button class='btn btn-primary' {{action 'updatePostForm'}}>Edit Post</button>
{{/if}}
