{{#if updateCommentForm}}
  <h3>Update {{comment.author}}'s comment</h3>
    <form>
      <div class='form-group'>
        <label for="author">Author</label>
        {{input class='form-control' value=comment.author id="author"}}
      </div>
      <div class='form-group'>
        <label for="body">Comment</label>
        {{textarea rows=5 class='form-control' value=comment.body id="body"}}
      </div>
      <button class='btn-sm btn-default' {{action "updateComment" comment}}>Save Comment</button>
    </form>
{{else}}
  <button class="btn-sm btn-default" {{action 'updateCommentForm'}}>Update</button>
{{/if}}
