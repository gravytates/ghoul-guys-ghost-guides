{{#if addNewPost}}
  <form>
    <div class="form-group">
      <div class='form-group'>
        <label for="title">Post title</label>
        {{input class='form-control' value=title id="title"}}
      </div>
      <div class='form-group'>
        <label for="author">Author</label>
        {{input class='form-control' value=author id="author"}}
      </div>
      <div class='form-group'>
        <label for="date">Date</label>
        {{input class='form-control' type='date' value=date id="date"}}
      </div>
      <div class='form-group'>
        <label for="body">Body</label>
        {{textarea class='form-control' rows=7 value=body id="body"}}
      </div>
      <button class='btn btn-default' {{action savePost}}>Post!</button>
    </div>
  </form>
{{else}}
 <button class='btn btn-default' {{action 'postFormShow'}}>New Post</button>
{{/if}}
